<%- include ('../partials/header') -%>

    <!-- Shop Detail Start -->
    <div class="container-fluid pb-5">
        <div class="row px-xl-5">
            <div class="col-lg-4 mb-30">
                <div id="product-carousel" class="carousel slide">
                    <img class="w-100" src="https://drive.google.com/uc?export=view&id=<%-item['image']%>" alt="">
                </div>
            </div>

            <div class="col-lg-8 h-auto mb-30">
                <div class="h-100 bg-light p-30 ">
                    <h3>
                        <%= item['productDisplayName'] %>
                    </h3>
                    <h3 class=" font-weight-semi-bold mb-4 red-text ">
                        <%= item['price'].toLocaleString()%> %> <small>vnd</small>
                    </h3>
                    <p class=" mb-4">
                        Description: <%= item['detail_desc'] %>
                    </p>
                    <div class="d-flex align-items-center mb-4 pt-2">
                        <button class="btn btn-primary px-3 addtocart product-item"
                            data-id="<%= item['article_id']%>"><i class="fa fa-shopping-cart mr-1"></i> Add
                            To
                            Cart</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Shop Detail End -->

    <!-- Products Start -->
    <div class="container-fluid pt-5 pb-3">
        <h2 class="section-title position-relative text-uppercase mx-xl-5 mb-4">
            <span class="bg-secondary pr-3">Recommend Products</span>
        </h2>
        <div class="row px-xl-5">
            <% products.forEach(element=> { %>
                <div class="col-lg-2 col-md-2 col-sm-6 pb-1">
                    <div class="product-item bg-light mb-4 rounded">
                        <div class="product-img position-relative overflow-hidden rounded text-center">
                            <img class="img-fluid product-image-<%= element['article_id']%>"
                                style="width:100%; height:250px"
                                src="https://drive.google.com/uc?export=view&id=<%-element['image']%>"
                                alt="<%- element['productDisplayName'].slice(0, 30) + " ..." + "not found" %>" />
                            <div class="product-action">
                                <button class="btn btn-outline-dark btn-square addtocart "
                                    data-id=<%=element['article_id']%>
                                    href=""><i class="fa fa-shopping-cart"></i></button>
                                <button class="btn btn-outline-dark btn-square" href=""><i
                                        class="fa fa-search"></i></button>
                            </div>
                        </div>
                        <div class="text-center py-4 product-content overflow-hidden"
                            style="background-color: #FFF8DE;">
                            <a class="h6 text-decoration-none text-truncate product-name-<%= element['article_id']%>"
                                href="/detail/<%= element['article_id']%>">
                                <small>
                                    <%= element['productDisplayName']%>
                                </small>
                            </a>
                            <div class="d-flex align-items-center justify-content-center mt-2">
                                <h5 class="product-price-<%= element['article_id']%> red-text">
                                    <%- element['price'].toLocaleString()%> <small>vnd</small>
                                </h5>
                            </div>
                        </div>
                    </div>
                </div>
                <% }) %>
        </div>


    </div>
    <!-- Products End -->
    <%- include ('../partials/footer') -%>